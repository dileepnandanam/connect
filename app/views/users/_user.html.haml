.user.col-sm-4.pull-left
  .user-thumb
    - if user.img.attachment.present? && user.profile_pic_visible?
      .image
        = image_tag(user.img)
    - elsif user.gender == 'male'
      .image.placeholder
        = image_tag(image_path('boy.jpg'))
    - else
      .image.placeholder
        = image_tag(image_path('girl.jpg'))
    .text-center= "#{user.gender} #{user.age}"
    - if user.handle_visible?
      .text-center= link_to user.handle, user.facebook_link
    - else
      .text-center= user.handle
    - if user.location_visible?
      .text-center= user.city
    = simple_form_for(Response.new, html: {remote: true}) do |r|
      - if user.question_1.present?
        = r.input :answer_1, label: user.question_1 
      - if user.question_2.present?
        = r.input :answer_2, label: user.question_2 
      - if user.question_3.present?
        = r.input :answer_3, label: user.question_3
      = r.hidden_field :to_user_id, value: user.id
      - if current_user
        = r.submit 'Propose'
