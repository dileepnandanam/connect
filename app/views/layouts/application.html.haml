!!!
%html
  %head
    %meta{content: "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{ :name=>"viewport", :content=>"width=device-width, initial-scale=1.0"}
    %meta{ :name=>"google-site-verification", :content=> "aTgG8DN02IEd5qlsvX5mnWq3sHtS11bEZ5Ipb5zkIXk" }
    %meta{ :name=>"Description", :content=> "Create a website in few steps with palkad.com with feedback tools fit for your business"}
    
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    = audio_tag 'inflicted.mp3', class: 'response-notif'
    .page
      .nav
        - if current_user
          = link_to current_user.email, edit_user_path(current_user), class: 'pull-right nav-item block'
          = link_to 'locate me', users_path, class: 'pull-right nav-item block i-am-here'
          = link_to "Log Out", destroy_session_path(User.new), method: :delete, class: 'pull-right nav-item block'
          = link_to 'Home', users_path, class: 'pull-right nav-item block'
          = link_to 'responses', responses_path, class: 'pull-right nav-item block'
          - if current_user.spouse_id.present?
            = link_to 'chat', chats_path, class: 'pull-right nav-item block'
        - else
          = link_to "Sign in", new_user_session_path, class: 'pull-right nav-item block', rel: :nofollow
          
          = link_to "Sign up", new_user_registration_path, class: 'pull-right nav-item block', rel: :nofollow
          = link_to 'Home', users_path, class: 'pull-right nav-item block'
        .clearfix
      = yield
      - if Rails.env.development?
        .acc-switcher
          - User.all.sort_by(&:email).each do |u|
            = link_to u.email, switch_user_path(u), class: "nav-item block user-switch pull-left #{(current_user== u ? 'black' : '')}"
          .clearfix
